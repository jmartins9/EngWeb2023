extends layout
block content
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Student Form 
        fieldset 
            legend Metadata 
            label id 
            input.w3-input.w3-round(type="text" name="id" value=a.id readonly)
            label Name
            input.w3-input.w3-round(type="text" name="nome" value=a.nome readonly)
            label Git
            input.w3-input.w3-round(type="text" name="gitlink" value=a.gitlink readonly)
            fieldset 
                legend TPC 
                each i in [1,2,3,4,5,7,8]
                    if "tpc"+i in a
                        label TPC#{i} 
                            br

        button.w3-btn.w3-red.w3-mb-2
            a(href="/alunos/delete/" + a.id + "/confirm") Confirm 
        button.w3-btn.w3-purple.w3-mb-2
            a(href="/") Cancel 
        
        footer.w3-container.w3-purple 
            h5 Generated by EngWeb in #{d} - [#[a(href="/") Return]]